<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:id="@+id/imgLocation"
        android:contentDescription="@string/imagen_localidad"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margen_estandar"
        android:layout_marginBottom="8dp"
        android:paddingEnd="@dimen/margen_estandar"
        android:paddingStart="@dimen/margen_izquierda_contenido"
        android:paddingTop="@dimen/margen_estandar">
        <TextView
            android:id="@+id/txtLocationName"
            style="@style/TextAppearance.AppCompat.Title.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textIsSelectable="true" />
        <TextView
            android:id="@+id/txtShortDesc"
            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:layout_marginBottom="@dimen/margen_estandar"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_marginBottom="8dp"
                android:text="@string/ubicaci_n" />
            <com.google.android.gms.maps.MapView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/locationMap"
                android:layout_marginBottom="8dp"
                />

            <com.github.nikartm.button.FitButton
                android:id="@+id/btnDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margen_estandar"
                android:layout_margin="@dimen/margen_estandar"
                android:layout_gravity="center"
                app:fb_shape="rectangle"
                app:fb_borderColor="@color/colorPrimary"
                app:fb_cornerRadius="15dp"
                app:fb_textStyle="bold"
                app:fb_textSize="16dp"
                app:fb_textColor="#FFF"
                app:fb_backgroundColor="@color/colorPrimary"
                app:fb_text="Ver Descripción completa"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_marginBottom="8dp"
                android:text="@string/informaci_n" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/activity_horizontal_margin">
                <com.github.nikartm.button.FitButton
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    app:fb_textSize="14sp"
                    android:gravity="center"
                    app:fb_backgroundColor="@color/colorPrimary"
                    app:fb_cornerRadius="2dp"
                    app:fb_shape="rectangle"
                    app:fb_icon="@drawable/biodiversity"
                    app:fb_iconColor="#FFF"
                    app:fb_iconPosition="top"
                    app:fb_text="Biodiversidad"
                    app:fb_textColor="#FFF"
                    android:layout_weight="1"
                    android:id="@+id/btnBio" />
                <com.github.nikartm.button.FitButton
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    app:fb_backgroundColor="@color/colorPrimary"
                    app:fb_cornerRadius="2dp"
                    app:fb_shape="rectangle"
                    app:fb_icon="@drawable/enviromental"
                    app:fb_iconColor="#FFF"
                    app:fb_iconPosition="top"
                    app:fb_text="Ambiental"
                    app:fb_textColor="#FFF"
                    android:layout_weight="1"
                    android:id="@+id/btnAmbiental" />
                <com.github.nikartm.button.FitButton
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    app:fb_backgroundColor="@color/colorPrimary"
                    app:fb_cornerRadius="2dp"
                    app:fb_shape="rectangle"
                    app:fb_icon="@drawable/culture"
                    app:fb_iconColor="#FFF"
                    app:fb_iconPosition="top"
                    app:fb_text="Cultura"
                    app:fb_textColor="#FFF"
                    android:layout_weight="1"
                    android:id="@+id/btnCultura" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/activity_horizontal_margin">
                <com.github.nikartm.button.FitButton
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    app:fb_backgroundColor="@color/colorPrimary"
                    app:fb_cornerRadius="2dp"
                    app:fb_shape="rectangle"
                    app:fb_icon="@drawable/ic_terrain_black_24dp"
                    app:fb_iconColor="#FFF"
                    app:fb_iconPosition="top"
                    app:fb_text="Arqueología"
                    app:fb_textColor="#FFF"
                    android:layout_weight="1"
                    android:id="@+id/btnArqueologia" />
                <com.github.nikartm.button.FitButton
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    app:fb_backgroundColor="@color/colorPrimary"
                    app:fb_cornerRadius="2dp"
                    app:fb_shape="rectangle"
                    app:fb_icon="@drawable/history"
                    app:fb_iconColor="#FFF"
                    app:fb_iconPosition="top"
                    app:fb_text="Historia"
                    app:fb_textColor="#FFF"
                    android:layout_weight="1"
                    android:id="@+id/btnHistoria" />
                <com.github.nikartm.button.FitButton
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    app:fb_backgroundColor="@color/colorPrimary"
                    app:fb_cornerRadius="2dp"
                    app:fb_shape="rectangle"
                    app:fb_icon="@drawable/economy"
                    app:fb_iconColor="#FFF"
                    app:fb_iconPosition="top"
                    app:fb_text="Economía"
                    app:fb_textColor="#FFF"
                    android:layout_weight="1"
                    android:id="@+id/btnEconomia" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/activity_horizontal_margin">
                <com.github.nikartm.button.FitButton
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    app:fb_backgroundColor="@color/colorPrimary"
                    app:fb_cornerRadius="2dp"
                    app:fb_shape="rectangle"
                    app:fb_icon="@drawable/sustainable"
                    app:fb_iconColor="#FFF"
                    app:fb_iconPosition="top"
                    app:fb_text="Desarrollo Sustentable"
                    app:fb_textColor="#FFF"
                    android:layout_weight="1"
                    android:id="@+id/btnDesarrollo" />
                <com.github.nikartm.button.FitButton
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    app:fb_backgroundColor="@color/colorPrimary"
                    app:fb_cornerRadius="2dp"
                    app:fb_shape="rectangle"
                    app:fb_icon="@drawable/demography"
                    app:fb_iconColor="#FFF"
                    app:fb_iconPosition="top"
                    app:fb_text="Demografía"
                    app:fb_textColor="#FFF"
                    android:layout_weight="1"
                    android:id="@+id/btnDemografia" />
                <com.github.nikartm.button.FitButton
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    app:fb_backgroundColor="@color/colorPrimary"
                    app:fb_cornerRadius="2dp"
                    app:fb_shape="rectangle"
                    app:fb_icon="@drawable/gastronomy"
                    app:fb_iconColor="#FFF"
                    app:fb_iconPosition="top"
                    app:fb_text="Gastronomía"
                    app:fb_textColor="#FFF"
                    android:layout_weight="1"
                    android:id="@+id/btnGastronomia" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>